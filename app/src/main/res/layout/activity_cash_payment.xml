<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="16dp">

    <EditText
        android:id="@+id/searchTender"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:actionViewClass="android.widget.SearchView"
        android:drawableLeft="@drawable/ic_cash"
        android:drawablePadding="5dp"
        android:inputType="number"
        style="@style/TextAppearance.AppCompat.Large"
        android:queryHint="0000.00"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:showAsAction="collapseActionView" />

    <Button
        android:layout_margin="20dp"
        android:id="@+id/btnTender"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/holo_green_dark"
        android:text="Tender"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#ffff"
        android:textSize="20dp" />

    <Button
        android:layout_margin="20dp"
        android:id="@+id/btnReciept"
        android:visibility="gone"
        android:layout_width="187dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@android:color/holo_green_dark"
        android:text="Reciept"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textColor="#ffff"
        android:textSize="20dp" />

    <TextView
        android:text="Rs50 change out of 100"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="25dp"
        android:visibility="gone"
        android:layout_marginBottom="5dp"
        android:id="@+id/tv_tenderCash"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="20sp"/>
</LinearLayout>